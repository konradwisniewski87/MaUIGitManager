<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GitHubMauiApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:GitHubMauiApp"
    Title="GitHubMauiApp">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="LoginPage" />
    <ShellContent
        Title="Repositories"
        ContentTemplate="{DataTemplate local:RepositoryListPage}"
        Route="RepositoryListPage" />
    <ShellContent
        Title="Issues"
        ContentTemplate="{DataTemplate local:IssueListPage}"
        Route="IssueListPage" />
    <ShellContent
        Title="Edit Issue"
        ContentTemplate="{DataTemplate local:IssueEditPage}"
        Route="IssueEditPage" />

</Shell>
