<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GitHubMauiApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:GitHubMauiApp.Views"
    Title="GitHubMauiApp">

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="LoginPage" />
    <ShellContent
        Title="Repositories"
        ContentTemplate="{DataTemplate views:RepositoryListPage}"
        Route="RepositoryListPage" />
    <ShellContent
        Title="Issues"
        ContentTemplate="{DataTemplate views:IssueListPage}"
        Route="IssueListPage" />
    <ShellContent
        Title="Edit Issue"
        ContentTemplate="{DataTemplate views:IssueEditPage}"
        Route="IssueEditPage" />

</Shell>
